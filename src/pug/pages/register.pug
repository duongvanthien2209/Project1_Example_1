extends ../base/base.pug

block content
  +breadcrumb([{ link: '/home.html', name: 'Trang chủ' }, { link: '#', name: 'Đăng ký' }])
  section.login__content
    .container
      form.custom__form.mb-5
        h5.custom__form__title Thông tin cá nhân:
        .form-row
          .form-group.col-12.col-md-6
            label(for='name') 
              | Họ và tên:
              span *
            input#name.form-control.rounded-0(type='text')
          .form-group.col-12.col-md-6
            label(for='email') 
              | Email:
              span *
            input#email.form-control.rounded-0(type='email')
          .form-group.col-12.col-md-6
            label(for='phone') 
              | Số điện thoại:
              span *
            input#phone.form-control.rounded-0(type='text')
          .form-group.col-12.col-md-6
            label(for='address') 
              | Địa chỉ:
              span *
            input#address.form-control.rounded-0(type='text')
        .form-check
          input#exampleCheck1.form-check-input(type='checkbox')
          label.form-check-label(for='exampleCheck1') Đăng ký nhân tin tức qua email
      form.custom__form
        h5.custom__form__title Thông tin cá nhân:
