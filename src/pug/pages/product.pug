extends ../base/base.pug

block content
  +breadcrumb([{ link: '#', name: 'Trang chủ' }, { link: '#', name: 'Danh mục sản phẩm' }])
  section.product
    .container
      .row
        .col-12.col-lg-3
          include ../partials/product-sidebar.pug
        .col-12.col-lg-9
          .product-header.border-bottom.mb-4
            form.form-inline.product-header__form.mr-auto
              .form-group.mr-3
                label.font-weight-bold.mr-2(for='formGroupExampleInput1') Sắp xếp theo:
                select#formGroupExampleInput1.custom-select.rounded-0
                  option(selected='') Tên sản phẩm
                  option(value='1') Sản phẩm 1
                  option(value='2') Sản phẩm 2
                  option(value='3') Sản phẩm 3
              .form-group
                label.font-weight-bold.mr-2(for='formGroupExampleInput2') Show:
                select#formGroupExampleInput2.custom-select.rounded-0
                  option(selected='') 0
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
            .product-header__btns
              label.btn.btn-outline-dark.btn-outline-yellow.mb-0.rounded-0(for="page1")
                i.fas.fa-bars
              label.btn.btn-outline-dark.btn-outline-yellow.mb-0.rounded-0(for="page2") 
                i.fas.fa-th

          input(id="page1" type="radio" name="page" hidden checked)
          .product-page
            each product in danhsachsanpham
              +product(product, false, true)
          input(id="page2" type="radio" name="page" hidden)
          .product-page
            .row
              each product in danhsachsanpham
                .col-12.col-md-6.col-lg-4.h-335-98px
                  +product(product)
          .product-footer
            include ../partials/pagination.pug
